{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src", "types"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/assets/tex/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "skipLibCheck": true,
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Bundler mode */
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}