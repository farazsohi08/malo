{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "tailwind.config.*",
    "src/assets/tex/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "useDefineForClassFields": true,
    "types": ["node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
